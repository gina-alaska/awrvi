.pull-right
  = link_to new_community_path, class: 'btn btn-success btn-block' do
    %i.fa.fa-plus
    New Community
%h1 Communities

.panel.panel-default
  .panel-heading
    = render 'search'

  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Name
        %th Gnis
        %th Location
        %th{:colspan => "3"} Actions
    %tbody
      - @communities.each do |community|
        %tr
          %td= community.name
          %td= community.gnis_id
          %td= community.location
          %td= link_to 'Show', community
          %td= link_to 'Edit', edit_community_path(community)
          %td= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' }
