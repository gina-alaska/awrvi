%p#notice= notice
%p
  %strong Name:
  = @community.name
%p
  %strong Gnis:
  = @community.gnis_id
%p
  %strong Census:
  = @community.census_id
%p
  %strong Location:
  = @community.location
= link_to 'Edit', edit_community_path(@community)
|
= link_to 'Back', communities_path

%h4 Index List
- if @community.indices.blank?
  %h5 This community has no Index.
- else
  %table
    %thead
      %tr
        %th Index Value
        %th Index Version
        %th View Index
    %tbody
      - @community.indices.each do |index|
        %tr
          %td
            Index:
            = number_with_precision(index.awrvi_index.to_f, precision: 2)
          %td
            Version:
            = index.awrvi_version.name
          %td
            = link_to index_path(index) do
              %i.fa.fa-info-circle.fa-lg
