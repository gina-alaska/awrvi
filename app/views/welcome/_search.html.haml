= form_tag :communities, method: :get do
  .row
    .col-sm-9.col-md-10
      = text_field_tag :q, "", class: 'form-control input-lg', placeholder: 'Search for communities'
    .col-sm-3.col-md-2
      = button_tag type: 'submit', class: 'btn btn-primary btn-block btn-lg', id: 'search' do
        %i.fa.fa-search
        Search
