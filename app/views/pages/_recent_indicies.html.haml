%h2 Completed Vulnerability Assessments
.community-list.row-fluid.text-center{ style: 'margin-top: 20px;'}
  .carousel.slide{ :id=>"carousel-inds", :data => {:ride => "carousel", :interval => "false"}}
    .carousel-inner
      - recent_indicies_as_groups.each do |group|
        - if recent_indicies_as_groups.first == group
          .item.carousel-item.active
            - group.each do |index|
              .community-item.col-xs-12.col-md-4
                .panel.panel-default
                  .panel-body
                    = render 'communities/mini_community', community: index.community
                    .community-actions
                      = link_to index.community, class: 'btn btn-default btn-block' do
                        View community
                        %i.fa.fa-arrow-right
        - else
          .item.carousel-item
            - group.each do |index|
              .community-item.col-xs-12.col-md-4
                .panel.panel-default
                  .panel-body
                    = render 'communities/mini_community', community: index.community
                    .community-actions
                      = link_to index.community, class: 'btn btn-default btn-block' do
                        View community
                        %i.fa.fa-arrow-right
    %div.btn-group
      %button.btn.btn-secondary.carousel-control-prev{:href => "#carousel-inds", :role => "button", :data => {:slide => "prev"}}
        %span.fa.fa-arrow-left
      %button.btn.btn-secondary.disabled
        more
      %button.btn.btn-secondary.carousel-control-next{:href => "#carousel-inds", :role => "button", :data => {:slide => "next"}}
        %span.fa.fa-arrow-right
      
  
