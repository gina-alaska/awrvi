%nav.navbar.navbar-default.navbar-static-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#navbar'}}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Arctic Water Resources Vulnerability Index', root_url, class: 'navbar-brand'
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to welcome_path do
            %i.fa.fa-home
            Home
        %li
          = link_to communities_path do
            %i.fa.fa-users
            Communities
        %li
          = link_to '#' do 
            %i.fa.fa-info-circle
            Indices
        -if can?(:manage, Category)
          %li
            = link_to categories_path do
              %i.fa.fa-sitemap
              Categories
        %li
          = link_to choices_path do
            %i.fa.fa-sliders
            Choices
        - if user_signed_in?
          - if current_user.user_admin?
            %li.dropdown
              = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                Manage
                %span.caret
              %ul.dropdown-menu
                %li= link_to 'Users', manage_users_path
          %li= link_to 'Profile', profile_path(current_user)
          %li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Sign In
              %span.caret
            %ul.dropdown-menu
              %li= link_to 'GINA::ID', user_omniauth_authorize_path(:open_id, openid_url: 'https://id.gina.alaska.edu')
