%nav.navbar.navbar-default.navbar-static-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#navbar'}}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Alaska Water Resources Vulnerability Index', '#', class: 'navbar-brand'
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          - if current_user.user_admin?
            %li.dropdown
              = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                Manage
                %span.caret
              %ul.dropdown-menu
                %li= link_to 'Users', manage_users_path
          %li= link_to 'Profile', profile_path(current_user)
          %li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Signin
              %span.caret
            %ul.dropdown-menu
              %li= link_to 'GINA::ID', user_omniauth_authorize_path(:open_id, openid_url: 'https://id.gina.alaska.edu')
