- if can?(:review, @review.index)
  - if @review.new_record?
    -# = render 'reviews/form'
    = link_to 'Mark as Reviewed', [@review.index, @review], method: :post, class: 'btn btn-primary'
  - else
    = link_to "Remove reviewed status", review_path(@review), method: :delete, class: 'btn btn-warning', data: { confirm: "Are you sure you want to remove the review?" }
